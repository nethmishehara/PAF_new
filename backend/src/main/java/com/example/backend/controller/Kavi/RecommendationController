package com.example.backend.controller.Kavi;

import com.example.backend.model.Kavi.Course;
import com.example.backend.service.Kavi.RecommendationService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/api/recommendations")
@CrossOrigin(origins = "*")
public class RecommendationController {

    @Autowired
    private RecommendationService recommendationService;

    @GetMapping("/{userId}")
    public List<Course> getRecommendations(@PathVariable String userId) {
        return recommendationService.recommendCourses(userId);
    }
}
